	Override Void NetworkProcess(ConsoleEvent e)
	{
			if(e.name == 'PBEquipSpecialOn')
		{
			if (players[0].mo.FindInventory("CantWeaponSpecial"))
			{
				wheelShow.Clear();
				wheelIsOpen = false;
				noWheel = true;
				return;
			}
			else
				noWheel = false;
		
            if (wheelIsOpen) { return; }
			

			if (players[0].mo.FindInventory("Melee_Attacks")){
				specialWheel_Eqipment();
				return;
			}
			

			else { return; }
		}
		
		else if(!noWheel && e.name == 'PBEquipSpecialOff' || players[0].ReadyWeapon.GetClassName() != selectedWeapon)
		{
			if(players[0].mo!=null && !(players[0].ReadyWeapon.GetClassName() != selectedWeapon))
			{
				if(wheelShow.Size()>0)
				{
					int curSelMod = wheelShow[currentSelection];
					players[0].mo.A_GiveInventory(wheelSpecials[curSelMod].specialName);
					players[0].mo.A_GiveInventory("ToggleEquipment");
					S_Sound("menu/choose",5);
					//Console.Printf(""..wheelSpecials[curSelMod].specialName);
				}
			}
			players[0].mo.A_TakeInventory("PlayerWheelOpen");
			wheelSort = false;
			wheelIsOpen = false;
		}
	//END OF TESTING
	if(e.name == 'PBWeaponSpecialOn')
		{
			if (players[0].mo.FindInventory("CantWeaponSpecial"))
			{
				wheelShow.Clear();
				wheelIsOpen = false;
				noWheel = true;
				return;
			}
			else
				noWheel = false;
		
            if (wheelIsOpen) { return; }
			
			//Check if equipped valid wheel-based weapon
			
			if (players[0].ReadyWeapon.GetClassName() == "Super_Grenade_Launcher"){
				specialWheel_SGL();
				return;
			}

			//Else perform normal weapon special
			else {
				players[0].mo.A_GiveInventory("GoWeaponSpecialAbility");
				selectedWeapon = players[0].ReadyWeapon.GetClassName();
				noWheel = true;
				return;
			}
		}
		
		else if(!noWheel && e.name == 'PBWeaponSpecialOff' || players[0].ReadyWeapon.GetClassName() != selectedWeapon)
		{
			if(players[0].mo!=null && !(players[0].ReadyWeapon.GetClassName() != selectedWeapon))
			{
				if(wheelShow.Size()>0)
				{
					int curSelMod = wheelShow[currentSelection];
					players[0].mo.A_GiveInventory(wheelSpecials[curSelMod].specialName);
					players[0].mo.A_GiveInventory("GoWeaponSpecialAbility");
					S_Sound("menu/choose",5);
					//Console.Printf(""..wheelSpecials[curSelMod].specialName);
				}
			}
			players[0].mo.A_TakeInventory("PlayerWheelOpen");
			wheelSort = false;
			wheelIsOpen = false;
		}
	}
